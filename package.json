{
  "name": "cna-typescript",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "test": "jest",
    "e2e:open": "cypress open",
    "e2e": "start-server-and-test dev 3000 e2e:open",
    "storybook": "start-storybook -p 6006 -c .storybook",
    "lint": "npm run lint:tsc && npm run lint:eslint",
    "lint:tsc": "npm run lint:tsc:src && npm run lint:tsc:e2e",
    "lint:tsc:src": "tsc --noEmit",
    "lint:tsc:e2e": "tsc -p ./cypress --noEmit",
    "lint:eslint": "npm run lint:eslint:src && npm run lint:eslint:e2e",
    "lint:eslint:src": "eslint --fix \"./src/**/*.{ts,tsx}\"",
    "lint:eslint:e2e": "eslint --fix \"./cypress/integration/**/*.{ts,tsx}\"",
    "plop": "plop"
  },
  "dependencies": {
    "modern-css-reset": "1.4.0",
    "next": "10.1.3",
    "next-pwa": "5.2.3",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "styled-components": "5.2.3"
  },
  "devDependencies": {
    "@babel/core": "7.13.14",
    "@storybook/preset-typescript": "3.0.0",
    "@storybook/react": "6.2.5",
    "@testing-library/dom": "7.30.3",
    "@testing-library/jest-dom": "5.11.10",
    "@testing-library/react": "11.2.6",
    "@testing-library/user-event": "13.1.1",
    "@types/jest": "26.0.22",
    "@types/node": "14.14.37",
    "@types/react": "17.0.3",
    "@types/styled-components": "5.1.9",
    "@typescript-eslint/eslint-plugin": "4.21.0",
    "@typescript-eslint/parser": "4.21.0",
    "babel-jest": "26.6.3",
    "babel-loader": "8.2.2",
    "babel-plugin-inline-react-svg": "2.0.1",
    "babel-plugin-styled-components": "1.12.0",
    "babel-preset-react-app": "10.0.0",
    "cypress": "7.0.1",
    "eslint": "7.23.0",
    "eslint-config-prettier": "8.1.0",
    "eslint-plugin-cypress": "2.11.2",
    "eslint-plugin-import-helpers": "1.1.0",
    "eslint-plugin-jest-dom": "3.7.0",
    "eslint-plugin-prettier": "3.3.1",
    "eslint-plugin-react": "7.23.1",
    "eslint-plugin-testing-library": "3.10.2",
    "husky": "6.0.0",
    "jest": "26.6.3",
    "lint-staged": "10.5.4",
    "plop": "2.7.4",
    "prettier": "2.2.1",
    "start-server-and-test": "1.12.1",
    "stylelint": "13.12.0",
    "stylelint-config-standard": "21.0.0",
    "ts-jest": "26.5.4",
    "typescript": "4.2.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./src/*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix-dry-run"
    ],
    "./cypress/integration/*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix-dry-run"
    ]
  }
}
